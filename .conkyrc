# .conkyrc
# ========== BimbaLaszlo(.github.io|gmail.com) =========== 2014.08.02 09:32 ==

# Use Xft?
use_xft yes
# xftfont DejaVu Sans:size=8
xftfont Liberation Mono:size=8
xftalpha 0.8
text_buffer_size 2048

# Update interval in seconds
update_interval 2

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Do not use background.
background no

# Create own window instead of using desktop (required in nautilus)
own_window             yes
# Kde needs own_window_type to be 'normal', for xfce set it to 'desktop'.
own_window_type        normal
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value  100
own_window_colour      000000
own_window_hints       undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 251 0

# Max ilyen hosszu neveket enged kiirni.
top_name_width 18

# Draw shades?
draw_shades no

# Draw outlines?
draw_outline no

# Draw borders around text
draw_borders no

# Stippled borders?
stippled_borders

# border margins
border_margin 5

# border width
border_width 1

# Default colors and also border colors
default_color white
# own_window_colour white

# Text alignment, other possible values are commented
alignment bottom_right

# Gap between borders of screen and text
# same thing as passing -x at command line
gap_x 16
gap_y 48

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# number of net samples to average
# set to 1 to disable averaging
net_avg_samples 2

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# Add spaces to keep things from moving about?  This only affects certain objects.
use_spacer none

TEXT
KERNEL${goto 60}${kernel}

PROCESS ${hr 2}

CPU${goto 60}${cpu cpu}% ${alignr}${cpubar 8,60 cpu}

NAME $alignr  PID     CPU   MEM
${top name 1} $alignr ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} $alignr ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} $alignr ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} $alignr ${top pid 4} ${top cpu 4} ${top mem 4}
${top name 5} $alignr ${top pid 5} ${top cpu 5} ${top mem 5}

RAM${goto 60}$mem/$memmax ${alignr}${membar 8,60}
SWAP${goto 60}$swap/$swapmax ${alignr}${swapbar 8,60}

NAME $alignr  PID    CPU    MEM
${top_mem name 1} $alignr ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${top_mem name 2} $alignr ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${top_mem name 3} $alignr ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${top_mem name 4} $alignr ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}
${top_mem name 5} $alignr ${top_mem pid 5} ${top_mem cpu 5} ${top_mem mem 5}

DISK ${hr 2}

${goto 60}USED ${goto 120}TOTAL
ROOT${goto 60}${fs_used /root} ${goto 120}${fs_size /root}${alignr}${fs_bar 8,60 /root}

NETWORK ${hr 2}

${goto 60}SPEED ${goto 120}TRANSFERED${if_existing /proc/net/route wlan0}
WLAN0
  UP${goto 60}${upspeed wlan0} ${goto 120}${totalup wlan0}${alignr}${upspeedgraph wlan0 8,60}
  DOWN${goto 60}${downspeed wlan0} ${goto 120}${totaldown wlan0}${alignr}${downspeedgraph wlan0 8,60}
SIGNAL ${wireless_link_qual wlan0}% ${alignr}${wireless_link_bar 8,60}
${else}${if_existing /proc/net/route eth0}
ETH0
  UP${goto 60}${upspeed eth0} ${goto 120}${totalup eth0}${alignr}${upspeedgraph eth0 8,60}
  DOWN${goto 60}${downspeed eth0} ${goto 120}${totaldown eth0}${alignr}${downspeedgraph eth0 8,60}${else}
NO NETWORK${endif}

Inbound: ${tcp_portmon 1 32767 count}  Outbound: ${tcp_portmon 32768 61000 count}${alignr}ALL: ${tcp_portmon 1 65535 count}

INBOUND CONNECTION ${ALIGNR} LOCAL SERVICE/PORT
${tcp_portmon 1 32767 rhost 0} ${alignr} ${tcp_portmon 1 32767 lservice 0}
${tcp_portmon 1 32767 rhost 1} ${alignr} ${tcp_portmon 1 32767 lservice 1}
${tcp_portmon 1 32767 rhost 2} ${alignr} ${tcp_portmon 1 32767 lservice 2}
${tcp_portmon 1 32767 rhost 3} ${alignr} ${tcp_portmon 1 32767 lservice 3}
${tcp_portmon 1 32767 rhost 4} ${alignr} ${tcp_portmon 1 32767 lservice 4}
OUTBOUND CONNECTION ${ALIGNR} REMOTE SERVICE/PORT
${tcp_portmon 32768 61000 rhost 0} ${alignr} ${tcp_portmon 32768 61000 rservice 0}
${tcp_portmon 32768 61000 rhost 1} ${alignr} ${tcp_portmon 32768 61000 rservice 1}
${tcp_portmon 32768 61000 rhost 2} ${alignr} ${tcp_portmon 32768 61000 rservice 2}
${tcp_portmon 32768 61000 rhost 3} ${alignr} ${tcp_portmon 32768 61000 rservice 3}
${tcp_portmon 32768 61000 rhost 4} ${alignr} ${tcp_portmon 32768 61000 rservice 4}
