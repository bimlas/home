" Lasd: :listoptions

" Mutassa a konyvjelzosavot es a toolbar-t.
set guioptions+=BT

" Mindig mutassa a parancssort.
set guioptions+=c

" Mutassa a tabok sorszamat.
set guioptions+=n

" Emelejen ki minden talalatot.
set hlfind

" Csak a <Tab> megnyomasara egeszitsen ki.
set autocomplete=

" Kiegeszitesek url begepelesenel.
set complete+=location
set complete+=bookmark
set complete-=history
set complete-=file
set complete-=search
set complete-=suggestions

" j/k scroll eleg lassu e nelkul.
set scrollsteps=1

" Kenyelmesebben elerheto billentyuk a navigalashoz.
set hintkeys=asdfghjklqwertzuiop

" A ;-ben valaztott mod (pl. ;?) a megadott elemeket tegye kivalaszthatova.
set extendedhinttags+=[?]:a,img

" Jobban lathato karakterek a navigalashoz.
highlight -a Hint font-family: monospace; font-size: 16px !important; padding: 0px 5px; text-decoration: bold; text-transform: uppercase; color: black; background-color: white;

" Ne mutassa az alt szoveget.
highlight Hint::after content: attr(number) !important;

" Map.
map  -builtin  <C-C>  <Esc>
imap -builtin  <C-C>  <Esc>
cmap -builtin  <C-C>  <Esc>
cmap -builtin  <C-N>  <Tab>
cmap -builtin  <C-P>  <S-Tab>
map  -builtin  H      0
map  -builtin  L      $
vmap -builtin  y      y<Esc>
map  -builtin  s      f
map  -builtin  <C-H>  d
imap -builtin  <C-L>  <Del>
nmap -builtin  <C-L>  :reload!<CR>
nmap -builtin  <F12>  :nohlfind<CR>

" Scroll gyorsitasa.
nmap -builtin  j      3j
nmap -builtin  k      3k

" Command.
command  -nargs=+ -complete url  e     open <args>
command  -nargs=+ -complete url  tabe  tabopen <args>

" vim: filetype=vim
