" Lasd: :listoptions

" Mutassa a konyvjelzosavot es a toolbar-t.
set gui+=bookmarks

" Mutassa a tabok sorszamat.
set tabnumbers

" Emelejen ki minden talalatot.
set hlsearch

" Csak a <Tab> megnyomasara egeszitsen ki.
set noautocomplete

" Kiegeszitesek url begepelesenel.
set complete+=l
set complete+=b
set complete-=h
set complete-=f
set complete-=s
set complete-=S

" Kenyelmesebben elerheto billentyuk a navigalashoz.
set hintchars=asdfghjklqwertzuiop

" Ezekrol az elemekrol is lehessen informaciot kerni.
set extendedhinttags+=" | //img"

" Jobban lathato karakterek a navigalashoz.
highlight Hint font-family: monospace; font-size: 16px !important; padding: 0px 5px; text-decoration: bold; text-transform: uppercase; color: black; background-color: white;

" Map.
noremap   <C-J>  <CR>
inoremap  <C-J>  <CR>
cnoremap  <C-J>  <CR>
noremap   <C-C>  <Esc>
inoremap  <C-C>  <Esc>
cnoremap  <C-C>  <Esc>
cnoremap  <C-N>  <Tab>
cnoremap  <C-P>  <S-Tab>
noremap   s      f
noremap   <C-H>  d
inoremap  <C-L>  <Del>
nnoremap  <C-L>  :reload!<CR>
nnoremap  <F12>  :nohlsearch<CR>
vnoremap  H      0
vnoremap  L      $

" Scroll gyorsitasa.
nnoremap  j      3j
nnoremap  k      3k

" Command.
command  -nargs=+ -complete url  e     open <args>
command  -nargs=+ -complete url  tabe  tabopen <args>

" vim: filetype=vim
