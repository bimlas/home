" Lasd:
" :listoptions
" http://5digits.org/help/pentadactyl/options.xhtml

" Hogy Win-en es Linuxon is ugyanaz legyen.
set runtimepath=~/.pentadactyl

" Szinsema a szokasosra.
colorscheme solarized-light

" Mutassa a konyvjelzosavot es a toolbar-t.
set guioptions+=T

" Mindig mutassa a parancssort.
set guioptions+=c

" Mutassa a tabok sorszamat.
set guioptions+=n

" Emelejen ki minden talalatot.
set hlfind

" Csak a <Tab> megnyomasara egeszitsen ki.
" set autocomplete=

" Kiegeszitesek url begepelesenel.
set complete=lS

" Kenyelmesebben elerheto billentyuk a navigalashoz.
set hintkeys=asdfghjklqwertzuiop

" A ;-ben valaztott mod (pl. ;?) a megadott elemeket tegye kivalaszthatova.
set extendedhinttags+=[?]:a,img

" Jobban lathato karakterek a navigalashoz.
" https://github.com/helmuthdu/pentadactyl/blob/master/vimperatorrc
highlight Hint       text-transform: uppercase; font-family : "Helvetica Neue", "Helvetica", "Arial", "Sans"; font-weight: bold; font-size: 11px; text-shadow: 0 1px 0 rgba(255, 255, 255, 0.6); color: #302505; padding: 1px 3px 0px 3px; background: -moz-linear-gradient(top, #FFF785, #FFC542); border: 1px #E3BE23 solid; border-radius: 2px; -moz-box-shadow: 0 3px 7px 0px rgba(0,0,0,0.3);

" Ne mutassa az alt szoveget.
" highlight Hint::after content: attr(number) !important;

" Map.
map  -builtin  <C-K>          <Esc>
imap -builtin  <C-K>          <Esc>
cmap -builtin  <C-K>          <Esc>

imap -builtin  <C-J>          <CR>
imap -builtin  <C-L>          <Del>
map  -builtin  <C-H>          d
nmap -builtin  <D>            <Nop>

cmap -builtin  <C-N>          <Tab>
cmap -builtin  <C-P>          <S-Tab>

map  -builtin  j              2j
map  -builtin  k              2k
map  -builtin  s              f
map  -builtin  gs             F
vmap -builtin  y              y<Esc>
map  -builtin  <C-E>          gt
map  -builtin  <C-Y>          gT
map  -builtin  <Space>ff      o
map  -builtin  <Space>ft      t
map  -builtin  <Space>bb      b
nmap -builtin  <Space><Tab>   :buffer #<CR>
nmap -builtin  <C-G>          :reload!<CR>
nmap -builtin  <Space>h       :nohlfind<CR>

map  -builtin  <C-C>          <C-Insert>
map  -builtin  <C-F>          /

cabbrev e    open
cabbrev tabe tabopen

" vim: filetype=vim
