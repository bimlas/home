[user]

  name         = "BimbaLaszlo"
  email        = "bimbalaszlo@gmail.com"

[alias]

  s            = "status"
  ad           = "add --all"
  ada          = "!git ad :/"
  c            = "commit"
  cm           = "!git c -m"
  adac         = "!git ada && git c"
  adacm        = "!git ada && git cm"
  adacmu       = "!git ada && git cm update"
  co           = "checkout"
  ps           = "push --all --follow-tags"
  pl           = "!git fetch; git status; read -p '\nCONTINUE PULLING? Y/[N]' ans; \
                  if echo $ans | grep '[Yy]' > /dev/null; then \
                  git pull && echo -e '\n__ CHANGELOG ________\n' && git changelog; fi"
  glog         = "log --graph --decorate --all --name-status"
  slog         = "log --graph --decorate --all --format='%C(auto)%h %Cblue%ad %C(auto)%d %Creset%s' --date=short"
  changelog    = "log --graph --decorate --all --name-status ORIG_HEAD.."
  flog         = "diff --name-status"
  tree         = "ls-tree -r --name-only"
  ctags        = "!.git/hooks/0_ctags"

[core]

  editor       = "gvim"

  ; Windows halozati meghajtokon nagyon lassu, ez gyorsitja a dolgokat, de
  ; legalabb 1.9.4 verzio kell.
  ; http://stackoverflow.com/a/24045966
  preloadindex = "true"
  fscache      = "true"

[color]

  ui           = "true"

[init]

  ; A konyvtar, amit init es clone eseten bemasol a .git konvytarba. Pl.:
  ; templatedir/hooks -> .git/hooks
  ; http://tbaggery.com/2011/08/08/effortless-ctags-with-git.html
  templatedir  = "~/.git_template"

[log]

  ; Roviditett SHA.
  abbrevCommit = "true"

  ; 2014-03-25 12:34:56 +0100
  date         = "iso"

[diff]

  tool         = "vimdiff"

[merge]

  tool         = "vimdiff"

[push]

  default      = "simple"

[gc]

  ; Fajlok szamanak minimalizalasa a .git konyvtarban. (valamennit gyorsit)
  auto         = 256
