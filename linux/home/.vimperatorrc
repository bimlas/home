" Lasd: :listoptions

" Mutassa a tabok sorszamat.
set tabnumbers

" Emelejen ki minden talalatot.
set hlsearch

" Csak a <Tab> megnyomasara egeszitsen ki.
" set noautocomplete

" Kiegeszitesek url begepelesenel.
set complete+=l
set complete+=b
set complete-=h
set complete-=f
set complete-=s
set complete-=S

" Kenyelmesebben elerheto billentyuk a navigalashoz.
set hintchars=asdfghjklqwertzuiop

" Ezekrol az elemekrol is lehessen informaciot kerni.
set extendedhinttags+=" | //img"

" Jobban lathato karakterek a navigalashoz.
highlight Hint     text-transform: uppercase; font-family : "Helvetica Neue", "Helvetica", "Arial", "Sans"; font-weight: bold; font-size: 11px; text-shadow: 0 1px 0 rgba(255, 255, 255, 0.6); color: #302505; padding: 1px 3px 0px 3px; background: -moz-linear-gradient(top, #FFF785, #FFC542); border: 1px #E3BE23 solid; border-radius: 2px; -moz-box-shadow: 0 3px 7px 0px rgba(0,0,0,0.3);
highlight HintElem background-color: #fec;

" Map.
noremap   <C-J>  <CR>
inoremap  <C-J>  <CR>
cnoremap  <C-J>  <CR>
noremap   <C-K>  <Esc>
inoremap  <C-K>  <Esc>
cnoremap  <C-K>  <Esc>
noremap   <C-N>  <Tab>
noremap   <C-P>  <S-Tab>
noremap   s      f
nnoremap  <C-L>  :nohlsearch<CR>
inoremap  <C-L>  <Del>
nnoremap  <C-R>  :reload!<CR>
vnoremap  H      0
vnoremap  L      $
nnoremap  <Space>ff :open<Space>
nnoremap  <Space>ft :tabopen<Space>

" Scroll gyorsitasa.
nnoremap  j      3j
nnoremap  k      3k

" Command.
command  -nargs=+ -complete url  e     open <args>
command  -nargs=+ -complete url  tabe  tabopen <args>

" vim: filetype=vim
