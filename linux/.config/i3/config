# Autostart scratchpad app
# NOTE: 
#   - Rofi window list does not hides scratchpad apps
#   - New browser windows wants to run under this instance in scratchpad
#exec --no-startup-id "firefox --class scratchpad-app http://localhost:9860"
#for_window [class="^scratchpad-app$"] move window to scratchpad
bindsym $mod+grave scratchpad show

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 5 ppt
        bindsym j resize grow height 10 px or 5 ppt
        bindsym k resize shrink height 10 px or 5 ppt
        bindsym l resize grow width 10 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 5 ppt
        bindsym Down resize grow height 10 px or 5 ppt
        bindsym Up resize shrink height 10 px or 5 ppt
        bindsym Right resize grow width 10 px or 5 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

mode "mediaplayer" {
        bindsym p       exec --no-startup-id "playerctl --all-players play-pause"
        bindsym Shift+h exec --no-startup-id "playerctl --all-players previous"
        bindsym h       exec --no-startup-id "playerctl --all-players position 30-"
        bindsym j       exec --no-startup-id "playerctl --all-players volume 0.1-"
        bindsym k       exec --no-startup-id "playerctl --all-players volume 0.1+"
        bindsym l       exec --no-startup-id "playerctl --all-players position 30+"
        bindsym Shift+l exec --no-startup-id "playerctl --all-players next"
        bindsym i       exec --no-startup-id \
          "cover=$(playerctl --all-players metadata mpris:artUrl); \
          cp ${cover#file://} /tmp/album-cover \
          || wget ${cover} -O - > /tmp/album-cover; \
          notify-send \
            --icon '/tmp/album-cover' \
            \\"$(playerctl --all-players metadata -f '{{title}}')\\" \
            \\"$(playerctl --all-players metadata -f '{{artist}} - {{album}}')\\""

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}
bindsym $mod+m mode "mediaplayer"

